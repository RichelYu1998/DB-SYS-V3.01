<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tedu.sys.dao.SysUserRolesDao">

    <resultMap type="cn.tedu.sys.entity.SysUserRoles" id="SysUserRolesMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysUserRolesMap">
        select
          id, user_id, role_id
        from jtsys.sys_user_roles
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysUserRolesMap">
        select
          id, user_id, role_id
        from jtsys.sys_user_roles
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysUserRolesMap">
        select
        id, user_id, role_id
        from jtsys.sys_user_roles
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="roleId != null">
                and role_id = #{roleId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into jtsys.sys_user_roles(user_id, role_id)
        values (#{userId}, #{roleId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update jtsys.sys_user_roles
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from jtsys.sys_user_roles where id = #{id}
    </delete>
    <!-- 基于 id 删除用户角色 -->
    <delete id="deleteObjectsByRoleId">
        delete from sys_user_roles
        where role_id=#{roleId}
    </delete>
    <select id="findRoleIdsByUserId" resultType="int">
        select role_id
         from sys_user_roles
         where user_id=#{id}
    </select>
    <!-- 基于用户id删除 -->
    <delete id="deleteObjectsByUserId"
            parameterType="int">
         delete from sys_user_roles
         where user_id=#{userId}
   </delete>
</mapper>
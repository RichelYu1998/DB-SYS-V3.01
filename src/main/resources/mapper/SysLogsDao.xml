<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tedu.dao.SysLogsDao">

    <resultMap type="cn.tedu.entity.SysLogs" id="SysLogsMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="operation" column="operation" jdbcType="VARCHAR"/>
        <result property="method" column="method" jdbcType="VARCHAR"/>
        <result property="params" column="params" jdbcType="VARCHAR"/>
        <result property="time" column="time" jdbcType="INTEGER"/>
        <result property="ip" column="ip" jdbcType="VARCHAR"/>
        <result property="createdtime" column="createdTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysLogsMap">
        select
          id, username, operation, method, params, time, ip, createdTime
        from jtsys.sys_logs
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysLogsMap">
        select
          id, username, operation, method, params, time, ip, createdTime
        from jtsys.sys_logs
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysLogsMap">
        select
        id, username, operation, method, params, time, ip, createdTime
        from jtsys.sys_logs
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="operation != null and operation != ''">
                and operation = #{operation}
            </if>
            <if test="method != null and method != ''">
                and method = #{method}
            </if>
            <if test="params != null and params != ''">
                and params = #{params}
            </if>
            <if test="time != null">
                and time = #{time}
            </if>
            <if test="ip != null and ip != ''">
                and ip = #{ip}
            </if>
            <if test="createdtime != null">
                and createdTime = #{createdtime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into jtsys.sys_logs(username, operation, method, params, time, ip, createdTime)
        values (#{username}, #{operation}, #{method}, #{params}, #{time}, #{ip}, #{createdtime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update jtsys.sys_logs
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="operation != null and operation != ''">
                operation = #{operation},
            </if>
            <if test="method != null and method != ''">
                method = #{method},
            </if>
            <if test="params != null and params != ''">
                params = #{params},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
            <if test="ip != null and ip != ''">
                ip = #{ip},
            </if>
            <if test="createdtime != null">
                createdTime = #{createdtime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from jtsys.sys_logs where id = #{id}
    </delete>

</mapper>